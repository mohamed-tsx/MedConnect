generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  username     String
  email        String        @unique
  password     String
  role         userRole      @default(patient)
  avatar       String        @default("https://www.call2let.com/images/agents/default.jpeg")
  doctors      Doctor[]
  Appointments Appointment[]
}

model Doctor {
  id             String @id @default(uuid())
  name           String
  hospitalId     String
  specialization String
  description    String
  avatar         String @default("https://mhchealthcare.org/wp-content/uploads/2019/05/doctor-avatar-1.jpg")
  hospital       User   @relation(fields: [hospitalId], references: [id])
}

model Appointment {
  id          String   @id @default(uuid())
  date        DateTime
  patientId   String
  doctorId    String
  description String
  doctor      User     @relation(fields: [doctorId], references: [id])
}

enum userRole {
  hospital
  patient
}
